<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zte.zshop.dao.ProductDao">

    <resultMap id="productMap" type="product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="info" column="info"/>
        <result property="image" column="image"/>
        <association property="productType" javaType="productType">
            <id property="id" column="product_type_id"/>
        </association>


    </resultMap>
    <resultMap id="productMap1" type="product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="info" column="info"/>
        <result property="image" column="image"/>
        <association property="productType" javaType="productType">
            <id property="id" column="pt.id"/>
            <result property="name" column="pt.name"/>
            <result property="status" column="status"/>
        </association>


    </resultMap>
    <sql id="productColumn">
        id,name,price,info,image,product_type_id

    </sql>

    <!--
    public void insert(Product product);
    -->
    <insert id="insert" parameterType="product">
    insert
    INTO
      t_product
      (name,price,info,image,product_type_id)
    VALUES
      (#{name},#{price},#{info},#{image},#{productType.id})

    </insert>

    <!--
    public Product selectByName(String name);
    -->
    <select id="selectByName" resultMap="productMap">
    SELECT
      <include refid="productColumn"/>
    FROM
      t_product
    where
      name=#{name}

    </select>

    <!--
        public List<Product> selectAll();






    -->
    <select id="selectAll" resultMap="productMap1">
    SELECT
      p.id,p.name,p.price,p.info,p.image,p.product_type_id,
      pt.id 'pt.id',pt.name 'pt.name',pt.status
    FROM
      t_product p
    LEFT JOIN
      t_product_type pt
    on
      p.product_type_id=pt.id

    </select>

    <!--
    public Product selectById(Integer id);
    -->
    <select id="selectById" resultMap="productMap">
        SELECT
        <include refid="productColumn"/>
        FROM
        t_product
        where
        id=#{id}

    </select>

    <!--
    public void update(Product product);
    -->
    <update id="update" parameterType="product">
    UPDATE
      t_product
    SET
      name=#{name},
      price=#{price},
      info=#{info},
      <if test="image!=null">image=#{image},</if>
      product_type_id=#{productType.id}
    WHERE
      id=#{id}

    </update>

    <!--
    public void deleteById(Integer id);
    -->
    <delete id="deleteById">
        DELETE
        FROM
          t_product
        WHERE
          id=#{id}

    </delete>

    <!--
    public List<Product> selectByParams(ProductParams productParams);
    -->
    <select id="selectByParams" parameterType="com.zte.zshop.params.ProductParams" resultMap="productMap">
      select
        <include refid="productColumn"/>
      from
        t_product
      <where>
        <if test="name!=null and name!=''">
            and name like concat(concat('%',#{name}),'%')
        </if>
        <if test="minPrice!=null and maxPrice!=null">
            and price between #{minPrice} and #{maxPrice}

        </if>
        <if test="minPrice!=null">
            and price &gt;= #{minPrice}
        </if>
        <if test="maxPrice!=null">
            and price &lt;= #{maxPrice}

        </if>
        <if test="productTypeId!=null and productTypeId!=-1">
            and product_type_id=#{productTypeId}

        </if>
      </where>


    </select>


</mapper>